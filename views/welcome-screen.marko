  <script>
    let BASEURL = "${input.BASEURL}";
    let user_id = "${input.user_id}";

    let vid = document.getElemementById('vid');

    vid.onended = function(evt) {
      let create_profile = confirm('Ready to create a profile?');

      if (create_profile) {
        MessengerExtensions.requestCloseBrowser(function success() {
          // webview closed
          let redirect_to_create_profile = fetch(BASEURL + '/close/welcome-webview.js');
        }, function error(err) {
          // an error occurred
        });
      } else {
        alert("Okay when you're ready to create your profile just close this webview and click Create Profile");
      }
    }
